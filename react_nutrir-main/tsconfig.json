{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/layouts/*"    : ["./components/layouts/*"],
      "@components/navigation/*" : ["./components/navigation/*"],
      "@components/ui/*" : ["./components/ui/*"],
      "@components/utils/*" : ["./components/utils/*"],
      "@styles/*" : ["./styles/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "styles/components/utils", "components/edit/DaysForm/utils"],
  "exclude": ["node_modules"]
}
